<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/team_home_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Home Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_guest_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Guest Name"
        app:layout_constraintEnd_toStartOf="@+id/img_check_isPaid"
        app:layout_constraintStart_toEndOf="@+id/team_home_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stadium_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Stadium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_home_textview" />

    <TextView
        android:id="@+id/league_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="League"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stadium_textview" />

    <ImageView
        android:id="@+id/img_check_isPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check" />

    <Button
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text = "Date"
        app:layout_constraintEnd_toStartOf="@+id/img_check_isPaid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/league_textview" />
</androidx.constraintlayout.widget.ConstraintLayout>