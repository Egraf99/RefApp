<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

<!--First line-->
    <TextView
        android:id="@+id/team_home_textview"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="spread"
        android:gravity="start"
        android:text="@string/home_team"
        app:layout_constraintBottom_toBottomOf="@+id/team_guest_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/versus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/versus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center"
        android:text="@string/versus"
        app:layout_constraintBottom_toBottomOf="@+id/team_guest_edittext"
        app:layout_constraintEnd_toStartOf="@+id/team_guest_textview"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintStart_toEndOf="@+id/team_home_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_guest_textview"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="spread"
        android:gravity="start"
        android:text="@string/guest_team"
        app:layout_constraintStart_toEndOf="@id/versus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--Second line-->
    <EditText
        android:id="@+id/team_home_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:hint="@string/home_team"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/versus"
        app:layout_constraintTop_toBottomOf="@+id/team_home_textview" />


    <EditText
        android:id="@+id/team_guest_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        app:layout_constraintWidth_default="spread"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/team_home_textview"
        app:layout_constraintStart_toEndOf="@id/versus"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/guest_team" />

    <!--    Third line-->

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/stadium_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="@string/stadium"
        app:startIconDrawable="@drawable/ic_stadium"
        app:startIconTint="@color/design_default_color_primary"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_add_outline"
        app:endIconTint="@color/design_default_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_home_edittext">

        <AutoCompleteTextView
            android:id="@+id/stadium_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="8dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <!--    <EditText-->
    <!--        android:id="@+id/stadium_edittext"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:hint="@string/stadium"-->

    <TextView
        android:id="@+id/league_textview"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/league"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stadium_layout" />

    <EditText
        android:id="@+id/league_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/league"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/league_textview" />

    <Button
        android:id="@+id/game_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_paid"
        app:layout_constraintWidth_percent="0.5"
        tools:text="Wed Nov 14 2022" />

    <Button
        android:id="@+id/game_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/game_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/game_date"
        app:layout_constraintWidth_percent="0.5"
        tools:text="12:00"/>

    <CheckBox
        android:id="@+id/game_paid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/gamePaidCheckbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/league_edittext" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/delete"
        android:backgroundTint="@color/red"/>

</androidx.constraintlayout.widget.ConstraintLayout>