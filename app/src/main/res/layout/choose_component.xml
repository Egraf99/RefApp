<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_background"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/copy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:text="@string/copy_title" />

        <com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/date_and_time_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:text="@string/date_and_time" />

            <CheckBox
                android:id="@+id/date_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/date"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/time_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="24dp"
                android:text="@string/time"
                android:visibility="gone" />

        </com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard>

        <CheckBox
            android:id="@+id/stadium_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/stadium" />

        <com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/state_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:text="@string/state" />

            <CheckBox
                android:id="@+id/passed_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/passed"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/paid_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="24dp"
                android:text="@string/paid"
                android:visibility="gone" />

        </com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard>

        <com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/teams_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:text="@string/teams" />

            <CheckBox
                android:id="@+id/home_team_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/home_team"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/guest_team_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/guest_team"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/league_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="24dp"
                android:text="@string/league"
                android:visibility="gone" />

        </com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard>

        <com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/referees_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:text="@string/referees" />

            <CheckBox
                android:id="@+id/chief_referee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/chief_referee"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/first_referee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/first_assistant"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/second_referee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/second_assistant"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/reserve_referee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/reserve_referee"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/inspector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="24dp"
                android:text="@string/inspector"
                android:visibility="gone" />

        </com.egraf.refapp.views.custom_views.checkbox_card.ExpandableCard>

        <ImageButton
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/accept_button" />

    </LinearLayout>
</ScrollView>