<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.egraf.refapp.views.custom_views.GameComponentSearch
        android:id="@+id/stadium_component_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        custom:title="@string/league"
        custom:mIcon="@drawable/ic_whistle"/>

    <Button
        android:id="@+id/date_choose_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/time_choose_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stadium_component_input"
        android:text="@string/date"/>

    <Button
        android:id="@+id/time_choose_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/date_choose_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/date_choose_button"
        app:layout_constraintBottom_toBottomOf="@id/date_choose_button"
        android:text="@string/time"/>

    <CheckBox
        android:id="@+id/game_passed_check_box"
        app:useMaterialThemeColors="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/game_paid_check_box"
        app:layout_constraintTop_toBottomOf="@id/date_choose_button"
        android:text="@string/gamePassedCheckBox"/>

    <CheckBox
        android:id="@+id/game_paid_check_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/game_passed_check_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/game_passed_check_box"
        android:text="@string/gamePaidCheckbox"/>
</androidx.constraintlayout.widget.ConstraintLayout>