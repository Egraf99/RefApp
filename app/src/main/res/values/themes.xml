<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RefApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/CustomEditText</item>
        <item name="checkboxStyle">@style/CustomCheckbox</item>
    </style>
    <style name="CustomEditText" parent="@android:style/Widget.EditText">
        <item name="android:backgroundTint">@color/orange</item>
    </style>
    <style name="CustomCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_check_box</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="DimGameItem" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="BrightGameItem">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>